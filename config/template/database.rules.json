{
  "rules": {
    "workers": {
      "$worker": {
        "$experiment": {
          "submitted": {
            ".read": true,
            ".write": "!data.exists()"
          },
          "$uid": {
            "completed": {
              ".read": true,
              ".write": "$uid === auth.uid"
            },
            "consented": {
              ".write": "$uid === auth.uid"
            }
          }
        }
      }
    },

    "experiments": {
      "$experiment": {
        ".indexOn": "info/completed",
        "$uid": {
          ".read": "$uid === auth.uid",
          "info": {
            ".write": "$uid === auth.uid"
          },
          "$trial": {
            ".write": "$uid === auth.uid && !data.exists()"
          }
        }
      }
    }
  }
}
