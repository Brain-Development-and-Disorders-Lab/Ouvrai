{
  "rules": {
    "workers": {
      "$workerId": {
        "$expName": {
          ".read": true,
          "$uid": {
            ".write": "$uid === auth.uid"
          },
          "submitted": {
            ".write": "newData.isString() && newData.val().length === 1"
          }
        }
      }
    },

    "experiments": {
      "$expName": {
        "$uid": {
          ".read": "$uid === auth.uid",
          "$trialN": {
            ".write": "$uid === auth.uid && !data.exists()"
          }
        }
      }
    }
  }
}
