{
  "rules": {
    "workers": {
      "$worker": {
        "$experiment": {
          ".read": true,
          "$uid": {
            ".write": "$uid === auth.uid"
          },
          "submitted": {
            ".write": "newData.isString() && newData.val().length === 1"
          }
        }
      }
    },

    "experiments": {
      "$experiment": {
        "$uid": {
          ".read": "$uid === auth.uid",
          "$trial": {
            ".write": "$uid === auth.uid && !data.exists()"
          }
        }
      }
    }
  }
}
