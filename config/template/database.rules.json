{
  "rules": {
    "workers": {
      "$worker": {
        "$experiment": {
          "submitted": {
            ".read": true,
            ".write": "newData.isString() && newData.val().length === 1"
          },
          "$uid": {
            "completed": {
              ".read": true,
              ".write": "$uid === auth.uid"
            },
            "consented": {
              ".write": "$uid === auth.uid"
            }
          }
        }
      }
    },

    "experiments": {
      "$experiment": {
        "$uid": {
          ".read": "$uid === auth.uid",
          "$trial": {
            ".write": "$uid === auth.uid && !data.exists()"
          }
        }
      }
    }
  }
}
